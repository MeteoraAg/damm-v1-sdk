{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "types": ["mocha", "chai"],
    "target": "es2020",
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "./lib",
    "declaration": true
  },
  "exclude": ["tests", "lib"]
}
